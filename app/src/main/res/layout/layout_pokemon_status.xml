<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_base_stats"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:text="Base Stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_hp"
            android:textSize="@dimen/_12ssp"
            android:text="HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_base_stats"
            app:layout_constraintStart_toStartOf="@id/tv_base_stats"/>

        <TextView
            android:id="@+id/tv_attack"
            android:textSize="@dimen/_12ssp"
            android:text="Attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_hp"
            app:layout_constraintStart_toStartOf="@id/tv_hp"/>

        <TextView
            android:id="@+id/tv_defense"
            android:textSize="@dimen/_12ssp"
            android:text="Defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_attack"
            app:layout_constraintStart_toStartOf="@id/tv_attack"/>

        <TextView
            android:id="@+id/tv_sp_attack"
            android:textSize="@dimen/_12ssp"
            android:text="Sp. Attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_defense"
            app:layout_constraintStart_toStartOf="@id/tv_defense"/>

        <TextView
            android:id="@+id/tv_sp_defense"
            android:textSize="@dimen/_12ssp"
            android:text="Sp. Defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_sp_attack"
            app:layout_constraintStart_toStartOf="@id/tv_sp_attack"/>

        <TextView
            android:id="@+id/tv_speed"
            android:textSize="@dimen/_12ssp"
            android:text="Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_sp_defense"
            app:layout_constraintStart_toStartOf="@id/tv_sp_defense"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_hp_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_53sdp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_hp"
            app:layout_constraintStart_toEndOf="@+id/tv_hp"
            app:layout_constraintTop_toTopOf="@+id/tv_hp" />

        <TextView
            android:id="@+id/tv_attack_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_attack"
            app:layout_constraintStart_toStartOf="@+id/tv_hp_number"
            app:layout_constraintTop_toTopOf="@+id/tv_attack" />

        <TextView
            android:id="@+id/tv_defense_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_defense"
            app:layout_constraintStart_toStartOf="@+id/tv_hp_number"
            app:layout_constraintTop_toTopOf="@+id/tv_defense" />

        <TextView
            android:id="@+id/tv_sp_attack_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sp_attack"
            app:layout_constraintStart_toStartOf="@+id/tv_hp_number"
            app:layout_constraintTop_toTopOf="@+id/tv_sp_attack" />

        <TextView
            android:id="@+id/tv_sp_defense_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sp_defense"
            app:layout_constraintStart_toStartOf="@+id/tv_hp_number"
            app:layout_constraintTop_toTopOf="@+id/tv_sp_defense" />

        <TextView
            android:id="@+id/tv_speed_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_speed"
            app:layout_constraintStart_toStartOf="@+id/tv_hp_number"
            app:layout_constraintTop_toTopOf="@+id/tv_speed" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/indicator_hp"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:progress="15"
            android:layout_marginStart="@dimen/_8sdp"
            app:indicatorColor="@color/type_grass"
            app:layout_constraintBottom_toBottomOf="@+id/tv_hp_number"
            app:layout_constraintStart_toEndOf="@+id/tv_hp_number"
            app:layout_constraintTop_toTopOf="@+id/tv_hp_number"
            app:trackColor="@color/type_steel"
            app:trackCornerRadius="@dimen/_5sdp"
            app:trackThickness="@dimen/_8sdp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/indicator_attack"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:progress="16"
            app:indicatorColor="@color/type_grass"
            app:layout_constraintBottom_toBottomOf="@+id/tv_attack_number"
            app:layout_constraintStart_toStartOf="@id/indicator_hp"
            app:layout_constraintTop_toTopOf="@+id/tv_attack_number"
            app:trackColor="@color/type_steel"
            app:trackCornerRadius="@dimen/_5sdp"
            app:trackThickness="@dimen/_8sdp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/indicator_defense"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:progress="16"
            app:indicatorColor="@color/type_grass"
            app:layout_constraintBottom_toBottomOf="@+id/tv_defense_number"
            app:layout_constraintStart_toStartOf="@id/indicator_hp"
            app:layout_constraintTop_toTopOf="@+id/tv_defense_number"
            app:trackColor="@color/type_steel"
            app:trackCornerRadius="@dimen/_5sdp"
            app:trackThickness="@dimen/_8sdp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/indicator_sp_attack"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:progress="22"
            app:indicatorColor="@color/type_grass"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sp_attack_number"
            app:layout_constraintStart_toStartOf="@id/indicator_hp"
            app:layout_constraintTop_toTopOf="@+id/tv_sp_attack_number"
            app:trackColor="@color/type_steel"
            app:trackCornerRadius="@dimen/_5sdp"
            app:trackThickness="@dimen/_8sdp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/indicator_sp_defense"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:progress="22"
            app:indicatorColor="@color/type_grass"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sp_defense_number"
            app:layout_constraintStart_toStartOf="@id/indicator_hp"
            app:layout_constraintTop_toTopOf="@+id/tv_sp_defense_number"
            app:trackColor="@color/type_steel"
            app:trackCornerRadius="@dimen/_5sdp"
            app:trackThickness="@dimen/_8sdp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/indicator_speed"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:progress="15"
            app:indicatorColor="@color/type_grass"
            app:layout_constraintBottom_toBottomOf="@+id/tv_speed_number"
            app:layout_constraintStart_toStartOf="@id/indicator_hp"
            app:layout_constraintTop_toTopOf="@+id/tv_speed_number"
            app:trackColor="@color/type_steel"
            app:trackCornerRadius="@dimen/_5sdp"
            app:trackThickness="@dimen/_8sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>